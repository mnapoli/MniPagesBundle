{% extends '::layout.html.twig' %}

{% block content %}

    <div class="jumbotron">

        <h1>
            {{ title }}
            <small>This is a demo of the MniPagesBundle.</small>
        </h1>

        <form class="form-inline" data-page-action="setTitle" data-page-refresh>
            <div class="form-group">
                <input type="text" class="form-control" name="title" placeholder="{{ title }}">
            </div>
            <button type="submit" class="btn btn-default">Update title and refresh</button>
            <small>(this is an example of a page action)</small>
        </form>

    </div>

    <div class="row">
        <div class="col-lg-6">
            {{ component(component1) }}
        </div>
        <div class="col-lg-6">
            {{ component(component2) }}
        </div>
    </div>

    <p class="well">
        You can also interact with the components from the page:
        <button type="button" class="btn btn-default" data-page-action="resetNumbers" data-page-refresh>
            Reset the numbers
        </button>
    </p>

{% endblock %}
