<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>{% block title %}MniPagesBundle demo{% endblock %}</title>

    {% stylesheets 'bundles/mopabootstrap/bootstrap/dist/css/*.min.css' filter='cssrewrite' %}
        <link rel="stylesheet" href="{{ asset_url }}">
    {% endstylesheets %}

    {% javascripts
        '@MniPagesDemoBundle/Resources/public/js/*'
        'bundles/mopabootstrap/bootstrap/dist/js/bootstrap.min.js'
        '@MniPagesBundle/Resources/public/js/*' %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}

    <script type="text/javascript">
        var Pages = Pages || {};
        Pages.componentRoute = '{{ path('mni_pages_component') }}';
    </script>
</head>
<body>

    <div class="container">

        {% block content %}{% endblock %}

    </div>

</body>
</html>
